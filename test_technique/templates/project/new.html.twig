{# templates/task/new.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
<div class="projectPage">
    <div class="col-lg-12" id="title">
        <h1>Create a new project</h1>
    </div>
    {{ form_start(form) }}
    <div class="projectForm formstyle d-flex flex-wrap">    
        <div class="col-lg-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-7 offset-lg-2">
            <div class="row w-100">
                <div class="projectColor col-lg-4 d-flex align-items-center ">
                    {{ form_label(form.color, '', { 'label_attr': {'style': 'margin: 0px;'} }) }}
                </div>
                <div class="projectColor col-lg-8 d-flex align-items-center ">
                    {{ form_widget(form.color, { 'attr': {'style': 'height: 40px; padding: 3px;'} }) }}
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="projectSave">
                {{ form_row(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


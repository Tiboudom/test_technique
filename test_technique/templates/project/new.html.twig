{# templates/task/new.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
<div style="width: 100%; display: flex; flex-direction: column; align-items: center;">
    <div class="col-lg-12" id="title">
        <h1>Create a new project</h1>
    </div>
    {{ form_start(form) }}
    <div class="formstyle d-flex flex-wrap" style="width: 400px;">    
        <div class="col-lg-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-7 offset-lg-2">
            <div class="row w-100">
                <div class="col-lg-4 d-flex align-items-center" style="height: 70px;">
                    {{ form_label(form.color, '', { 'label_attr': {'style': 'margin: 0px;'} }) }}
                </div>
                <div class="col-lg-8 d-flex align-items-center" style="height: 70px;">
                    {{ form_widget(form.color, { 'attr': {'style': 'height: 40px; padding: 3px;'} }) }}
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div style="display: flex; justify-content: center;">
                {{ form_row(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/form.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}